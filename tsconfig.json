{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "esnext",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "jsx": "react",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "noImplicitAny": true,
    "strict": true,
    "noEmit": true
  },
  "include": ["./packages/**/*", "./*.{ts,js,cjs,json}", "./.*.{ts,js,cjs,json}", "babel.config.js"],
  "exclude": ["node_modules", "dist"]
}
