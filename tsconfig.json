{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "esnext",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "noImplicitAny": true,
    "strict": true,
    "noEmit": true,
    "paths": {
      "@/components/*": ["./packages/builder/frameworks/components/*"]
    }
  },
  "include": ["./packages/**/*", "webpack.config.js", ".eslintrc.cjs"],
  "exclude": ["node_modules", "dist"]
}
